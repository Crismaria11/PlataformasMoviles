<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="155dp" android:layout_marginStart="155dp" tools:layout_editor_absoluteY="55dp"/>
    <TextView
            android:text="Restaurante del Alienigena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="141dp"
            android:id="@+id/textView2" android:layout_marginEnd="108dp" android:layout_marginRight="108dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Mostrar Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="200dp"
            android:id="@+id/button" android:layout_marginEnd="125dp" android:layout_marginRight="125dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Mostrar pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="274dp"
            android:id="@+id/button2" android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>